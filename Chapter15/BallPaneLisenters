
package Chapter15;


import javafx.application.Application;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.layout.StackPane;
import javafx.scene.layout.HBox;
import javafx.scene.layout.Pane;
import javafx.scene.layout.BorderPane;
import javafx.scene.paint.Color;
import javafx.scene.shape.Circle;
import javafx.stage.Stage;
  
 public class Ball extends Application {

    public static void main(String[] args) {
        launch(args);
    }

  @Override // Override the start method in the Application class
  public void start(Stage primaryStage) {
        Circle circlePane = new Circle();
       Pane pane = new Pane();
       StackPane stackPane = new StackPane();
       stackPane.getChildren().add(circlePane);
       
       circlePane.setFill(Color.GREEN);
       circlePane.setStroke(Color.BLACK);
       circlePane.setRadius(50);
       circlePane.setCenterY(120);
       circlePane.setCenterX(175);
       pane.getChildren().add(circlePane);
       

        Button btRight = new Button("RIGHT");
        Button btLeft = new Button("LEFT");
        Button btUp = new Button("UP");
        Button btDown = new Button("DOWN");
        
        HBox hBox = new HBox();
        hBox.getChildren().add(btRight);
        hBox.getChildren().add(btLeft);
        hBox.getChildren().add(btUp);
        hBox.getChildren().add(btDown);


        BorderPane borderPane = new BorderPane();
        borderPane.setCenter(pane);
        borderPane.setBottom(hBox);
        BorderPane.setAlignment(hBox, Pos.CENTER);
        stackPane.setAlignment(Pos. CENTER);

     
      

               
        // Create and register the handler
        btRight.setOnAction(new EventHandler<ActionEvent>() {
            @Override
            public void handle(ActionEvent e) {
                circlePane.setCenterX(circlePane.getCenterX() < pane.getWidth() - 100 ? circlePane.getCenterX() + 5 : pane.getWidth() - 100);
            }
        });
        btLeft.setOnAction(new EventHandler<ActionEvent>() {
            @Override
            public void handle(ActionEvent e) {
                circlePane.setCenterX(circlePane.getCenterX() >0 ? circlePane.getCenterX() - 5 : 0);
            }
        });
        btUp.setOnAction(new EventHandler<ActionEvent>() {
            @Override
            public void handle(ActionEvent e) {
                circlePane.setCenterY(circlePane.getCenterY() > 10 ? circlePane.getCenterY() - 5 : 10);
            }
        });

        btDown.setOnAction(new EventHandler<ActionEvent>() {
            @Override
            public void handle(ActionEvent e) {
                circlePane.setCenterY(circlePane.getCenterY() < pane.getHeight() ? circlePane.getCenterY() + 5 : pane.getHeight());
            }
        });
            Scene scene = new Scene(borderPane, 350, 250);
            primaryStage.setTitle("BallPane"); // Set the stage title
            primaryStage.setScene(scene); // Place the scene in the stage
            primaryStage.show(); // Display the stage
    }

}
