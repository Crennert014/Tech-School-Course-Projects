package Chapter16;
import javafx.animation.PathTransition;
import javafx.animation.Timeline;
import javafx.application.Application;
import javafx.collections.ObservableList;
import javafx.event.ActionEvent;
import javafx.event.EventHandler;
import javafx.geometry.Insets;
import javafx.geometry.Pos;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.RadioButton;
import javafx.scene.control.ToggleGroup;
import javafx.scene.layout.BorderPane;
import javafx.scene.layout.HBox;
import javafx.scene.layout.Pane;
import javafx.scene.layout.StackPane;
import javafx.scene.layout.VBox;
import javafx.scene.paint.Color;
import javafx.scene.shape.Rectangle;
import javafx.scene.text.Text;
import javafx.scene.shape.Circle;
import javafx.scene.shape.Polygon;
import javafx.stage.Stage;
import javafx.util.Duration;

public class RadioButtons extends Application {
    private int width  = 420;
    private int height  = 250;
   
   
    public static void main(String[] args) {
        launch(args);
    }
        @Override   
    public void start(Stage primaryStage) {
        //Create Pane
       Pane pane = new Pane();
        pane.setPrefHeight(250);
        pane.setPrefWidth(420);
        //Create text Node
        Text text = new Text("Shit Balls");
        text.setFill(Color.BLACK);
        text.setTranslateX(width / 2);
        text.setTranslateY(height / 2);
        pane.getChildren().add(text);
        //Create Radio buttons
        Button leftBt = new Button("<=");
        Button rightBt = new Button("=>");
        //Create HBox
        HBox hBox = new HBox();
        hBox.getChildren().addAll(rightBt, leftBt);
        //Create BorderPane
        BorderPane borderPane = new BorderPane();
        borderPane.setCenter(pane);
        borderPane.setBottom(hBox);
        
        // Create VBox for radio buttons
        HBox paneForRadioButton = new HBox(20);
        paneForRadioButton.setPadding(new Insets(5, 5, 5, 5));
        paneForRadioButton.setStyle("-fx-border-width: 2px; -fx-border-color: green");
        RadioButton redBt = new RadioButton("Red");
        RadioButton GreenBt = new RadioButton("Green");
        RadioButton BlueBt = new RadioButton("Blue");
        RadioButton OrangeBt = new RadioButton("Orange");
        RadioButton BlackBt = new RadioButton("Black");
        paneForRadioButton.getChildren().addAll(redBt, GreenBt, BlackBt, BlueBt, OrangeBt);
        borderPane.setTop(paneForRadioButton);

        //Create Toggle
        ToggleGroup group = new ToggleGroup();
        redBt.setToggleGroup(group);
        GreenBt.setToggleGroup(group);
        BlackBt.setToggleGroup(group);
        BlueBt.setToggleGroup(group);
        OrangeBt.setToggleGroup(group);
        //Handles for radio buttons
        redBt.setOnAction(e -> {
            if (redBt.isSelected()){
                text.setFill(Color.RED);
            }
        });
        GreenBt.setOnAction(e -> {
            if (GreenBt.isSelected()) {
                text.setFill(Color.GREEN);
            }
        });
        BlueBt.setOnAction(e -> {
            if (BlueBt.isSelected()) {
                text.setFill(Color.BLUE);
            }
        });
        OrangeBt.setOnAction(e -> {
            if (OrangeBt.isSelected()) {
                text.setFill(Color.ORANGE);
            }
        });
        BlackBt.setOnAction(e -> {
            if (BlackBt.isSelected()) {
                text.setFill(Color.BLACK);
            }
        });
        //Handle for Left/Right button movements
        rightBt.setOnAction(new EventHandler<ActionEvent>() {
            @Override
            public void handle(ActionEvent e) {
              
                text.setLayoutX(text.getLayoutX() < pane.getWidth() / 3 ? text.getLayoutX() + 5 : text.getLayoutX());
            }
        });
        leftBt.setOnAction(new EventHandler<ActionEvent>() {
            @Override
            public void handle(ActionEvent e) {
                text.setLayoutX(text.getLayoutX() > -140 ? text.getLayoutX() - 5 : text.getLayoutX());
            }
        });
        
        Scene scene = new Scene(borderPane, 420, 250);
        primaryStage.setTitle("Radio Butoons"); // Set the stage title
        primaryStage.setScene(scene); // Place the scene in the stage
        primaryStage.show(); // Display the stage
}
        

    }
    
