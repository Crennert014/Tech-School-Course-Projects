package Chapter_7;

public class exercise23 {
    

        public static void main(String[] args) {

            // declerations 
        int numberOfLockers = 100;
        boolean[] lockers = new boolean[numberOfLockers];

                    // loop and nested loops used to calculate open and closed lockers
            for ( int student = 1; student <= numberOfLockers; student++) {
                for (int lockerIndex = student - 1; lockerIndex < numberOfLockers; lockerIndex += student) {
                    lockers[lockerIndex] = !lockers[lockerIndex];
                }
            }
            //??
        for ( int i = 0; i < numberOfLockers; i++){
            if (lockers[i]) {
                System.out.print(" Locker open lockers are " + (i+ 1));
            }
        }

}
}

