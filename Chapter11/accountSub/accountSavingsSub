package Chapter11;
import java.util.Scanner;
public class accountSavingSub{

protected static void savingsMenu(double accountSavingSub) {

    double savingsAccount = 20000;
        Scanner input = new Scanner(System.in);
    boolean running = true;
        while (running) {
        System.out.println("\nSavings Account Menu:");
        System.out.println("1. View Savings Balance");
        System.out.println("2. Withdraw from Savings");
        System.out.println("3. Deposit to Savings");
        System.out.println("4. Back to Main Menu");
        System.out.print("Enter choice: ");
        int entry = input.nextInt();

        switch (entry) {
            case 1:
                System.out.printf("Your savings balance is: $%.2f\n", savingsAccount);
                break;
            case 2:
                System.out.print("Enter amount to withdraw: ");
                double withdrawAmount = input.nextDouble();
                if (withdrawAmount > savingsAccount) {
                    System.out.println("The amount exceeds your savings balance.");
                } else if (withdrawAmount <= 0) {
                    System.out.println("Withdrawal amount must be greater than 0.");
                } else {
                    savingsAccount -= withdrawAmount;
                    System.out.printf("After withdrawal, savings balance: $%.2f\n", savingsAccount);
                }
                break;
            case 3:
                System.out.print("Enter amount to deposit: ");
                double depositAmount = input.nextDouble();
                if (depositAmount <= 0) {
                    System.out.println("Deposit must be greater than 0.");
                } else {
                    savingsAccount += depositAmount;
                    System.out.printf("After deposit, savings balance: $%.2f\n", savingsAccount);
                }
                break;
            case 4:
                running = false;
                break;
            default:
                System.out.println("Invalid input. Please enter 1-4.");
        }
        }
    }
}
    

